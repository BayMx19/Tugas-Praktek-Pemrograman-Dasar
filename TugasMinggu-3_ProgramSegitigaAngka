#include<iostream>
#include<conio.h>

using namespace std; 

int main() 
{ 
	int i, N, J; 
	cout<<"Masukkan Segitiga Angka : "; 
	cin>>N; 
	cout<<"\n"; 
	for (int i=1; i<=N; i++) { 
		for (int J=1; J<=i; J++) { 
		cout<<J; 
		} 
	cout<<" \n"; 
	} 
	for (int i=N-1; i>=1;i--) { 
		for (int J=1;J<=i;J++) { 
		cout<<J;
		} 
	cout<<" \n"; 
	} 
	return 0; 
}
